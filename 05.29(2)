int main() {
    ifstream fin("scores.txt");
    ofstream fout("result.txt");

   if(!fin or !fout) {
        cout << "파일 오픈 실패" << endl;
        return 0;
    }

    string name[100];
    double arr[100]; 
    int count = 0;
    while(fin>>name[count]>>arr[count] ) {
        count++;
        if(count>=99) break;
    }
    cout << "... 파일 읽어서 총 " << count << " 명 배열에 저장" << endl;

    sort(arr, arr+count ); 
    cout <<"... 배열 정렬" << endl;

    for(int i=0; i<count; i++) { 
        fout << arr[i] << endl;
    }
    cout <<"... result.txt 에 결과 저장" << endl;
    fin.close();
    fout.close();
    return 0;
}
